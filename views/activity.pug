extends layout

block content
  include header
    div.container
      div.col-lg-8.col-xs-12
        canvas#myChart
      div.col-lg-2.col-xs-3
        input(type="date")
      div.col-lg-2.col-xs-3.dropdown.show
        button.btn.btn-primary.dropdown-toggle#duration(type="button" data-toggle="dropdown") Select Duration
        ul.dropdown-menu(role="menu")
          li: a.dropdown-item#week(href="#") Week
          li: a.dropdown-item#month(href="#") Month
          li: a.dropdown-item#year(href="#") Year
  include footer
  script(src='/javascripts/build/activity.js')

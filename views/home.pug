extends layout

block content
  div#loader-bg
    div#loader
      img(src="/images/gif/icon_loader_a_ww_01_s1.gif")
      p.loading Now loading...
  include header
  div#main.wrap
    div#contents.pomodoro
      div.task
        div.selector
          select.selectpicker(data-live-search="true")
        div.tagsinput-primary
          input.tagsinput(name="tagsinput" data-role="tagsinput" value="test1, test21, test3" maxTags="5")
        div.col-lg-12.col-xs-12.dropdown.show#task
          button.btn.btn-primary.dropdown-toggle#task(type="button" data-toggle="dropdown") Select Task
          ul.dropdown-menu.scrollable-menu(role="menu")
            li.task: a.dropdown-item.task#work(href="#") Work
            li.task: a.dropdown-item.task#private(href="#") Private
            li.divider
            li: div.input-group
              input#newTask(type="text")
              button.btn.btn-xs.btn-inverse#submitNewTask(type="button") Add Task
      div.timer
        p.term Term:
        p.currentStatus Status:
        p.time 00:00
      div#btn-timer
        button.btn.btn-primary.btn-wide.start(disabled="true") start
        button.btn.btn-default.btn-wide.stop(disabled="true") stop
      div#btn-reset
        button.btn.btn-danger.reset reset Timer

      div.modal.fade(tabindex="-1")
        div.modal-dialog
          div.modal-content
            div.modal-header
              button.close(type="button" data-dismiss="modal")
                span(aria-hidden="true") &times;
              b.modal-title#modal-label modal dialog
            div.modal-body sample message
            div.modal-footer
              button.btn.btn-default(type="button" data-dismiss="modal") Close
  include footer
  script(src="/javascripts/build/home.js")
